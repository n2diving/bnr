<div class="mx-auto text-center">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="margin-bottom-md">Forgot your password?</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control margin-bottom-md", placeholder: "Email" %>


        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary margin-bottom-md" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>