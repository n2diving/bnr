<div class="mx-auto text-center">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="mb-sm-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, class: "form-control mb-sm-4", autofocus: true, placeholder: "Email" %>
        <%= f.password_field :password, class: "form-control mb-sm-4", autocomplete: "off", placeholder: "Password" %>

        <%= f.submit "Log in", class: "btn btn-primary mb-sm-4" %>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>